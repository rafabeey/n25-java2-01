package br.com.senaisp.bauru.secao03.aula09;

import java.util.Random;
import java.util.Scanner;

public class Forca {

	private String palavraSecreta;
	private String palavraMascarada;
	private int erros;
	//numero aleatorio
	private Random rnd;
	//Constructor
	public Forca() {
		rnd = new Random();
		int linhaEscolhida = rnd.nextInt(180);
		int linhaAtual = 0;
		Scanner sc = new Scanner(Forca.class.getResourceAsStream("palavras.txt"));
		while (sc.hasNextLine());
		if (linhaAtual == linhaEscolhida) {
			palavraSecreta = "" + apoio;
			palavraMascarada = "_".repeat(palavraMascarada.length());
			break;
		}
		linhaAtual++;
		
		sc.close();
	    erros = 0;
	}


	public String getPalavraMascarada() {
		return palavraMascarada;
	}
	public int getErros() {
		return erros;
	}
	@Override
	public String toString() {
		             //123456
		String linha = "+---+\n"+ //linha 1
		               " | " + (erros>=2 ? "\\" : " " ) +
		                       (erros>=1 ? "o"  : " " ) +
		                       (erros>=3 ? "/"  : " " )+ "\n" + //linha 2
		               " | " + (erros>=4 ? "|"  : " " )+ "\n" + //linha 3
		               " | " + (erros>=5 ? "/"  : " " )+ " "  +
		               		   (erros>=6 ? "\\" : " " )+ "\n" + //linha 4
		               "|\n" +                                  //linha 5
		               "===" + getPalavraMascarada() + "\n";    //linha 6		   
				
		return super.toString();
	}
}


